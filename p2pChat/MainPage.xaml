<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="p2pchat.MainPage">

    <StackLayout>
        <Grid x:Name="ipv6Stack" Margin="2,2,2,2">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="5*" ></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="showLocalIpv6"/>
            <Button Clicked="Copy" Grid.Column="1" Text="复制"/>

        </Grid>

        <Label x:Name="recvText" />


        <Grid Margin="2,2,2,2">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="5*" ></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Entry Placeholder="输入对方ipv6"    Grid.Column="0" x:Name="remoteIp"  />
            <Button  Clicked="ClearIpv6"  Grid.Column="1" Text="清除" />

        </Grid>



        <Editor  Placeholder="输入内容" x:Name="content"  FontAutoScalingEnabled="True" AutoSize="TextChanges"/>
        <Button Text="发送"  Clicked="SendIpv6" />
        
        <!--<Button Text="复制"  Clicked="Copy" />-->


        <Button Text="朋友" Clicked="ShowFriendsEvent"/>

    </StackLayout>

</ContentPage>
