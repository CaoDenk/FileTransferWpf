<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="p2pchat.ShowFriends"
             Title="ShowFriends">
    <VerticalStackLayout x:Name="labelsStack">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Clicked="CreateDB" Text="创建"/>
        <Button Clicked="AddFriend" Text="添加"/>
        <Button Clicked="Query" Text="查询"/>
        <Button Clicked="GetDataPath" Text="获取data目录"/>
        <Button Clicked="ShowPermissions" Text="获取权限"/>
        <Button Clicked="TestPermissions" Text="测试权限"/>
    </VerticalStackLayout>
</ContentPage>